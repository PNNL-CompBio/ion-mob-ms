Bootstrap: docker
From: node:18
Includecmd: no

%files
    ./requirements.txt /Work/requirements.txt
    ./backend /Work
    ./py_test.py /Work/py_test.py

%post
    apt-get update && apt-get --assume-yes install python3-pip
    cd /Work
    pip install -r requirements.txt
    apt-get install redis-server -y
    chmod -R 0755 .
    sed -i 's/localhost/redis1/' /Work/backend/.env
    

%startscript
    cd /Work
    python3 /Work/backend/manage.py runserver 0.0.0.0:8000
    

%environment
    NODE_ENV=development
    PORT=8000
    ALLOW_HTTP=true
    URL=localhost
    SINGULARITY_BINDPATH="/home/vagrant/pipe_test/volume:/Work"
    export NODE_ENV PORT ALLOW_HTTP URL SINGULARITY_BINDPATH




